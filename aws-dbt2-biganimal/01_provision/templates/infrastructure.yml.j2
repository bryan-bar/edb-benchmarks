# Basic template to generate
# - DBT2 instance
# - Aurora instance
# Needed variables to generate template
# - region
#   - zone0
# - instance_type
# - pg_instance_type
#   - project_id (biganimal)
#   - pg_engine
#   - pg_version
#   - pg_superuser
#   - pg_password
aws:
  tags:
    cluster_name: DBT2-BigAnimal
    created_by: edb-terraform
  operating_system:
    name: Rocky-8-ec2-8.6-20220515.0.x86_64
    owner: 679593333241
  regions:
    {{ region }}:
      cidr_block: 10.0.0.0/16
      zones:
        {{ zone0 }}: 10.0.0.0/24
      service_ports:
        - port: 22
          protocol: tcp
          description: "SSH"
        - port: 30000
          protocol: tcp
          description: "DBT-2"
        - port: 30000
          protocol: udp
          description: "DBT-2"
        - port: 5432
          protocol: tcp
          description: "PostgreSQL"

  machines:
    dbt2_driver:
      region: {{ region }}
      zone: {{ zone0 }}
      instance_type: {{ instance_type }}
      volume:
        type: gp2
        size_gb: 50
        iops: 5000
        encrypted: false
      tags:
        type: dbt2-driver

  biganimal:
    dbt2:
      project:
        id: {{ ba_project_id }}
      region: {{ region }}
      type: ha
      node_count: 2
      engine: {{ pg_engine }}
      engine_version: {{ pg_version }}
      instance_type: {{ pg_instance_type }}
      password: {{ pg_password }}
      volume:
        type: {{ pg_storage_type }}
        properties: {{ pg_storage_properties }}
        size_gb: {{ pg_storage_size }}
        iops: {{ pg_storage_iops }}
      tags:
        dbname: dbt2
